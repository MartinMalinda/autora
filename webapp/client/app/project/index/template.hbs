{{project-header heading=model.name projectController=project}}
<div class="big centered bordered project box">
	<div class="head">
		<h2>{{model.name}}</h2>
		<div class="meta">
			{{log model.user}}
			{{#if model.user.email}}
			<span> Started {{!-- moment-format model.createdAt 'MM/DD/YYYY' --}} {{moment-from-now model.createdAt}} by </span> {{#link-to 'user.index' model.user.id}}{{gravatar-image class="circular profile" email=model.user.email size=35}}{{/link-to}}
			{{/if}}
			| <div class="tags">{{#each model.tags as |tag|}}
					{{#link-to 'tag' tag.name class="small rounded purple bordered button tag"}}{{tag.name}}{{/link-to}}
				{{/each}}</div>
		</div>
		<p>{{model.description}}</p>
	</div>
	<div class="body">
		{{#each model.entries key="id" as |entry|}}
			{{successful-entry model=entry}}
		{{/each}}

		{{!-- {{#if newEntry.newEntry.showPreview}}
			<hr>
			{{successful-entry model=newEntry.newEntry}}
		{{/if}} --}}
	</div>
</div>


<div {{action "createPile"}} class="btn btn-primary">Create pile</div>
{{outlet}}
