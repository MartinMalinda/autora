<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <nav class="nav navbar-nav navbar-left">
                <img class="logo" src="images/logo.png" />
            </nav>
        </div>
        <div class="col-sm-8">
            <nav class="nav navbar-nav navbar-right">
                {{#if isLoggedIn}}
                    {{#link-to 'project.list' (query-params create="true")}}Create{{/link-to}}
                    {{#link-to 'application'}}Contribute{{/link-to}}
                    {{#link-to 'project.list'}}Read{{/link-to}}
                    <a class="plain toggleDropdown" {{action 'toggleDropdown'}}>{{gravatar-image email=session.user.email width=35 class="profile-circle"}} <div class="caret {{if showDropdown "caret-reversed"}}"><b></b></div></a>
                    {{#if showDropdown}}
                        <div class="dropdown">
                            {{#link-to 'user.index' session.user.id}}<i class="fa fa-user"></i><span class="username">{{session.user.username}}</span>
                            {{/link-to}}
                            {{#link-to 'user.index.settings' session.user.id}}<i class="fa fa-wrench"></i>Settings{{/link-to}}
                            {{#link-to 'user.logout'}}<i class="fa fa-power-off"></i>Logout{{/link-to}}

                        </div>
                    {{/if}}
                {{else}}
                    {{#link-to 'home'}}Home{{/link-to}}
                    {{#link-to 'about'}}About{{/link-to}}
                    {{#link-to 'how-it-works'}}How It Works{{/link-to}}
                    {{#link-to 'user.login'}}Login{{/link-to}}
                    {{#link-to 'user.signup' class="button-flat"}}Sign Up{{/link-to}}
                {{/if}}
            </nav>
        </div>
    </div>
</div>
